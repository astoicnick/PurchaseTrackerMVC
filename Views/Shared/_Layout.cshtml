<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Perry Purchase Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Perry.css")
    @Styles.Render("https://fonts.googleapis.com/css?family=Raleway&display=swap")
</head>
<body>
    <!-- Navbar-->
    <nav class="navbar navbar-expand-sm navbar-light sticky-top bg-custom">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="#navbarContent" aria-expanded="false" aria-label="Toggle Navigation Bar">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("The Perry Purchase Tracker", "Index", "Home", new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav custom-nav">
                <li class="nav-item">
                    @Html.ActionLink("Purchases", "Index", "Purchase", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "Index", "Purchase", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Media", "Index", "Purchase", new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <!--Body-->
    <div class="jumbotron jumbotroncustom">
                    @RenderBody()
    </div>
    <!--Footer-->
    <footer class="footer mt-auto py-3 footercustom">
        <p>&copy; @DateTime.Now.Year - Perry Purchase Tracker - A Perry Product</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
